<%= form_with(model: payment_classification, local: true) do |form| %>
  <% if payment_classification.errors.any? %>
    <div id="error_explanation">
      <h3><%= "#{payment_classification.errors.count}個のエラーがあります" %></h3>

      <ul>
        <% payment_classification.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :purpose %>
    <%= form.select :purpose, [["生活に必要", :required], ["楽しみのため", :enjoyment]] %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :sort %>
    <%= form.number_field :sort %>
  </div>

  <div class="actions">
    <%= form.submit "保存" %>
  </div>
<% end %>
