<p id="notice"><%= notice %></p>

<h1>支払い分類</h1>

<table>
  <thead>
    <tr>
      <th>目的</th>
      <th>名称</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_classifications.each do |payment_classification| %>
      <tr>
        <td><%= payment_classification.purpose %></td>
        <td><%= payment_classification.name %></td>
        <td><%= link_to '詳細', payment_classification %></td>
        <td><%= link_to '編集', edit_payment_classification_path(payment_classification) %></td>
        <td><%= link_to '削除', payment_classification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

