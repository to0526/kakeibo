<p id="notice"><%= notice %></p>

<h1>支払い方法一覧</h1>

<table>
  <thead>
    <tr>
      <th>名称</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_methods.each do |payment_method| %>
      <tr>
        <td><%= payment_method.name %></td>
        <td><%= link_to '詳細', payment_method %></td>
        <td><%= link_to '編集', edit_payment_method_path(payment_method) %></td>
        <td><%= link_to '削除', payment_method, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_payment_method_path %>
