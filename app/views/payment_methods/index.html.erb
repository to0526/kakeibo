<h2>収支方法一覧</h2>

<table>
  <thead>
    <tr>
      <th>名称</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_methods.each do |payment_method| %>
      <tr>
        <td><%= payment_method.name %></td>
        <td><%= link_to '編集', edit_payment_method_path(payment_method) %></td>
        <td><%= link_to '削除', payment_method, method: :delete, data: { confirm: '削除してよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_payment_method_path, class: "link" %>
